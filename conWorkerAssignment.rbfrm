		Function CellBackgroundPaint(g As Graphics, row As Integer, column As Integer) As Boolean
		  If row Mod 2=0 then
		    g.foreColor= rgb(255,255,255)
		  else
		    g.foreColor= rgb(245,245,245)
		  end if
		  g.FillRect 0,0,g.width,g.height
		End Function
