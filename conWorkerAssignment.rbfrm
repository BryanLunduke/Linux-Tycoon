	#tag Method, Flags = &h0
		Sub UpdatePackageList()
		  listPackages.DeleteAllRows
		  
		  dim i as integer
		  
		  for i = 0 to MyDistro.PackagesIncluded.Ubound
		    
		    listPackages.AddRow PackagesAvailable(MyDistro.PackagesIncluded(i)).Name
		    listPackages.RowTag(i) = MyDistro.PackagesIncluded(i)
		    
		  next
		End Sub
	#tag EndMethod

	#tag Method, Flags = &h0
		Sub UpdateWorkers()
		  dim theListIndex as integer
		  dim theRowTag as integer
		  
		  if MyDistro <> nil then
		    if listPackages.ListIndex > -1 then
		      
		      lblAvailPaid.Text = str(MyDistro.GetDistroWorkerAvailablePaid) + " / " + str(MyDistro.WorkersPaid)
		      lblAvailVol.Text = str(MyDistro.GetDistroWorkerAvailableVolunteer) + " / " + str(MyDistro.WorkersVolunteers)
		      
		      theListIndex = listPackages.ListIndex
		      theRowTag = listPackages.RowTag(theListIndex)
		      
		      lblAssignedPaid.text = str(MyDistro.WorkersPaidAssigned(theListIndex))
		      lblAssignedVol.text = str(MyDistro.WorkersVolunteersAssigned(theListIndex))
		      
		      lblName.Text = PackagesAvailable(listPackages.RowTag(listPackages.ListIndex)).Name
		      
		    end if
		  end if
		  
		End Sub
	#tag EndMethod


