		Function CellTextPaint(g As Graphics, row As Integer, column As Integer, x as Integer, y as Integer) As Boolean
		  
		  g.ForeColor = rgb(0,0,0)
		  g.TextSize = 13
		  g.DrawString PackagesAvailable(me.RowTag(row)).Name + " " + str(PackagesAvailable(me.RowTag(row)).Version) + ".0" , 0,15
		  
		  'g.ForeColor = rgb(50,50,50)
		  'g.TextSize = 10
		  'g.DrawString PackagesAvailable(me.RowTag(row)).Description, 0,27
		  
		  
		  g.ForeColor = rgb(80,80,80)
		  
		  g.TextSize = 8
		  g.DrawString "Bugs: " + str(PackagesAvailable(me.RowTag(row)).Bugs), 0,27
		  
		  g.DrawString "Volunteers: " + str(MyDistro.GetWorkersVolunteersForPackage(me.RowTag(row))), 45,27
		  
		  g.DrawString "Paid: " + str(MyDistro.GetWorkersPaidForPackage(me.RowTag(row))), 120, 27
		  
		  
		  Return true
		  
		End Function
